<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:layout_margin="16dp"
    android:paddingLeft="32dp"
    android:paddingTop="16dp"
    android:paddingRight="32dp"
    android:paddingBottom="16dp"
    android:background="@drawable/bg_alert"
    app:layout_constraintCircleRadius="16dp">

    <TextView
        android:id="@+id/dialog_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="16dp"
        android:gravity="center"
        android:fontFamily="@font/opensans_regular"
        android:textStyle="bold"
        android:textSize="24dp"
        android:textColor="@color/black"
        android:text="Add new Option"/>
    <com.google.android.material.textfield.TextInputLayout
        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:errorEnabled="true"
        android:id="@+id/o_name"
        android:fontFamily="@font/opensans_regular"
        android:textColor="@color/black"
        android:hint="Name">
        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/dialog_option_name"
            android:layout_width="match_parent"
            android:fontFamily="@font/opensans_regular"
            android:layout_height="wrap_content"
            android:textColor="@color/black"/>
    </com.google.android.material.textfield.TextInputLayout>

    <com.google.android.material.textfield.TextInputLayout
        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:errorEnabled="true"
        android:fontFamily="@font/opensans_regular"
        android:id="@+id/o_price"
        android:textColor="@color/black"
        android:hint="Price">
        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/dialog_option_price"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/opensans_regular"
            android:inputType="numberDecimal"
            android:textColor="@color/black"/>
    </com.google.android.material.textfield.TextInputLayout>
    <com.google.android.material.textfield.TextInputLayout
        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:errorEnabled="true"
        android:fontFamily="@font/opensans_regular"
            android:id="@+id/o_description"
            android:textColor="@color/black"
            android:hint="Description">
        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/dialog_option_description"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/opensans_regular"
            android:textColor="@color/black"/>
    </com.google.android.material.textfield.TextInputLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fontFamily="@font/opensans_regular"
        android:layout_marginTop="16dp"
        android:textColor="@color/black"
        android:text="Image"/>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/VImg"
        android:layout_width="155dp"
        android:layout_height="155dp"
        android:layout_gravity="center_horizontal">

        <ImageView
            android:id="@+id/dialog_option_image"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="fitXY"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:background="@color/primaryColor"/>
        <ImageView
            android:id="@+id/dialog_icon_image"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:src="@drawable/ic_baseline_image"
            app:layout_constraintBottom_toBottomOf="@+id/VImg"
            app:layout_constraintEnd_toEndOf="@+id/VImg"
            app:layout_constraintStart_toStartOf="@+id/VImg"
            app:layout_constraintTop_toTopOf="@+id/VImg" />
        <ImageView
            android:id="@+id/dialog_icon_upload"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:src="@drawable/ic_baseline_upload"
            app:layout_constraintBottom_toBottomOf="@+id/VImg"
            app:layout_constraintEnd_toEndOf="@+id/VImg"
            app:layout_constraintStart_toStartOf="@+id/VImg"
            app:layout_constraintTop_toTopOf="@+id/VImg"
            android:visibility="invisible"/>
        <ImageView
            android:id="@+id/dialog_icon_clear"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:src="@drawable/ic_baseline_clear"
            app:layout_constraintTop_toTopOf="@+id/VImg"
            app:layout_constraintRight_toRightOf="@+id/VImg"
            android:visibility="invisible"/>

        <ProgressBar
            android:id="@+id/dialog_progressbar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintBottom_toBottomOf="@+id/VImg"
            app:layout_constraintEnd_toEndOf="@+id/VImg"
            app:layout_constraintStart_toStartOf="@+id/VImg"
            app:layout_constraintTop_toTopOf="@+id/VImg"
            android:visibility="invisible"/>
    </androidx.constraintlayout.widget.ConstraintLayout>

    <Button
        android:id="@+id/dialog_btn"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:layout_marginTop="32dp"
        android:fontFamily="@font/opensans_regular"
        android:layout_gravity="center_horizontal"
        android:textColor="@color/white"
        android:text="Add new Option"/>

</LinearLayout>