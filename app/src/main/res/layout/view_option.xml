<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/option_view">
    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardCornerRadius="16dp"
        app:cardElevation="3dp"
        android:outlineSpotShadowColor="@color/primaryColor"
        android:outlineAmbientShadowColor="@color/primaryColor"
        app:cardUseCompatPadding="true"
        app:cardPreventCornerOverlap="false">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="124dp"
            android:padding="2dp"
            android:background="@color/white">
            <androidx.cardview.widget.CardView
                android:layout_width="168dp"
                android:layout_height="match_parent"
                app:cardCornerRadius="16dp"
                app:cardPreventCornerOverlap="false"
                app:cardElevation="0dp"
                android:background="@color/white">
                <ImageView
                    android:id="@+id/OptionImg"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:scaleType="fitXY"
                    android:background="@color/white"
                    android:layout_marginRight="16dp"/>
            </androidx.cardview.widget.CardView>
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:layout_marginLeft="-16dp"
                android:orientation="vertical"
                android:paddingTop="6dp"
                android:paddingBottom="6dp"
                android:paddingRight="8dp"
                android:paddingLeft="8dp"
                android:background="@color/white">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="24dp"
                    android:orientation="horizontal">
                    <TextView
                        android:id="@+id/OptionName"
                        android:layout_width="0dp"
                        android:layout_height="24dp"
                        android:layout_weight="1"
                        android:textSize="16dp"
                        android:textColor="@color/black"
                        android:textStyle="bold"
                        android:fontFamily="monospace"
                        android:text="Name"/>
                    <androidx.appcompat.widget.Toolbar
                        android:elevation="7dp"
                        android:layout_marginRight="-16dp"
                        android:id="@+id/ToolBar"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent">
                    </androidx.appcompat.widget.Toolbar>
                </LinearLayout>
                <TextView
                    android:id="@+id/OptionDescription"
                    android:layout_width="match_parent"
                    android:layout_height="60dp"
                    android:paddingLeft="8dp"
                    android:textSize="13dp"
                    android:textStyle="bold"
                    android:lines="3"
                    android:textColor="@color/eblack"
                    android:fontFamily="monospace"
                    android:text="Description"/>
                <TextView
                    android:id="@+id/OptionPrice"
                    android:layout_width="match_parent"
                    android:layout_height="24dp"
                    android:textSize="14dp"
                    android:textColor="@color/black"
                    android:textStyle="bold"
                    android:fontFamily="monospace"
                    android:text="Price"/>
            </LinearLayout>
        </LinearLayout>
    </androidx.cardview.widget.CardView>
</LinearLayout>